    <script>
        function generateMailto() {
            const to = document.getElementById("to").value;
            const subject = encodeURIComponent(document.getElementById("subject").value);
            const body = encodeURIComponent(document.getElementById("body").value);
            
            let mailto = `mailto:${to}?subject=${subject}&body=${body}`;
            
            document.getElementById("mailtoLink").innerHTML = `<a href="${mailto}" class="email-link">ðŸ“§ Abrir E-mail</a>`;
        }
    </script>
