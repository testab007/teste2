        <form id="emailForm">
            <label>Seu E-mail:</label>
            <input type="email" id="from" required>

            <label>DestinatÃ¡rios:</label>
            <input type="text" id="to" placeholder="email1@exemplo.com, email2@exemplo.com" required>

            <label>Assunto:</label>
            <input type="text" id="subject">

            <label>Corpo do Texto:</label>
            <textarea id="body" rows="5"></textarea>

            <label>Anexos:</label>
            <input type="file" id="attachments" multiple>

            <button type="button" onclick="generateMailto()">Gerar Link</button>
